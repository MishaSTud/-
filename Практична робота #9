fn is_prime(n: u32) -> bool {
    if n < 2 {
        return false; // Числа менше 2 не є простими
    }
    for i in 2..=((n as f64).sqrt() as u32) {
        if n % i == 0 {
            return false; // Якщо n ділиться на i, то n не просте
        }
    }
    true // Якщо не знайдено дільників, то n просте
}

fn main() {
    let number = 29; // Змінити на будь-яке число для перевірки
    if is_prime(number) {
        println!("Число {} є простим.", number);
    } else {
        println!("Число {} не є простим.", number);
    }
}
